@model IT15.ViewModels.HumanResource.HumanResourceDashboardViewModel

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Human Resources Dashboard</h1>
    <p class="text-gray-600 mt-1">Overview of key HR metrics and tasks.</p>
</div>

<!-- Stat Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-yellow-300">
        <div class="flex items-center">
            <div class="bg-yellow-100 p-3 rounded-full">
                <i data-lucide="mail-question" class="w-6 h-6 text-yellow-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Pending Leave Requests</p>
                <p class="text-2xl font-bold text-gray-900">@Model.PendingLeaveRequestsCount</p>
            </div>
        </div>
        <a asp-area="HumanResource" asp-controller="LeaveRequest" asp-action="Index" class="text-blue-600 hover:underline mt-4 inline-block font-medium text-sm">Review Requests &rarr;</a>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-blue-300">
        <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-full">
                <i data-lucide="plane-takeoff" class="w-6 h-6 text-blue-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Employees on Leave Today</p>
                <p class="text-2xl font-bold text-gray-900">@Model.EmployeesOnLeaveToday</p>
            </div>
        </div>
        <p class="text-gray-400 mt-4 text-sm">Based on approved requests.</p>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-red-300">
        <div class="flex items-center">
            <div class="bg-red-100 p-3 rounded-full">
                <i data-lucide="hourglass" class="w-6 h-6 text-red-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Payrolls Pending Approval</p>
                <p class="text-2xl font-bold text-gray-900">@Model.PayrollsPendingApprovalCount</p>
            </div>
        </div>
        <a asp-area="HumanResource" asp-controller="Payroll" asp-action="Index" class="text-blue-600 hover:underline mt-4 inline-block font-medium text-sm">Go to Payroll &rarr;</a>
    </div>
</div>

<!-- Attendance Analytics Section -->
<div class="mt-8 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <div class="flex flex-col md:flex-row justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Attendance Analytics</h3>
        <!-- NEW: Date Range Filter Form -->
        <form asp-action="Index" method="get" class="flex items-center gap-2 mt-4 md:mt-0">
            <input type="date" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="px-2 py-1 border border-gray-300 rounded-md text-sm" />
            <span>to</span>
            <input type="date" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="px-2 py-1 border border-gray-300 rounded-md text-sm" />
            <button type="submit" class="bg-blue-600 text-white font-medium py-1 px-3 rounded-lg text-sm">Filter</button>
        </form>
    </div>
    <div>
        <canvas id="attendanceChart"></canvas>
    </div>
</div>

<!-- Upcoming Holidays Section -->
<div class="mt-8 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Upcoming Public Holidays (PH)</h3>
    @if (Model.UpcomingHolidays.Any())
    {
        <ul class="divide-y divide-gray-200">
            @foreach (var holiday in Model.UpcomingHolidays)
            {
                <li class="py-3 flex justify-between items-center">
                    <div>
                        <p class="font-medium text-gray-900">@holiday.Name</p>
                        <p class="text-sm text-gray-500">@DateTime.Parse(holiday.Date).ToString("dddd, MMMM dd, yyyy")</p>
                    </div>
                    <span class="text-xs font-semibold px-2 py-1 rounded-full bg-indigo-100 text-indigo-800">@holiday.Type</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-gray-500">Could not retrieve holiday information at this time.</p>
    }
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('attendanceChart').getContext('2d');
            const chartLabels = @Html.Raw(Json.Serialize(Model.AttendanceChartLabels));
            const chartData = @Html.Raw(Json.Serialize(Model.AttendanceChartData));

            // IMPROVED DESIGN: Create a gradient for the chart background
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(59, 130, 246, 0.5)');
            gradient.addColorStop(1, 'rgba(59, 130, 246, 0)');

            new Chart(ctx, {
                // IMPROVED DESIGN: Changed to a line chart for a cleaner look
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: 'Employees Present',
                        data: chartData,
                        backgroundColor: gradient, // Use the gradient
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(59, 130, 246, 1)',
                        pointRadius: 4,
                        fill: true, // Fill the area under the line
                        tension: 0.3 // Make the line smooth
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { stepSize: 1 }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#334155',
                            titleFont: { size: 14, weight: 'bold' },
                            bodyFont: { size: 12 },
                            padding: 10,
                            cornerRadius: 4
                        }
                    }
                }
            });
        });
    </script>
}

