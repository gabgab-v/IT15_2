@model IT15.ViewModels.HumanResource.PayrollReviewViewModel

@{
    ViewData["Title"] = $"Review Payroll for {Model.Payroll.PayrollMonth:MMMM yyyy}";
    var culture = new System.Globalization.CultureInfo("en-PH");
}

<div class="border-b border-gray-200 pb-4 mb-6">
    <a asp-action="Index" class="text-blue-600 hover:underline text-sm mb-2 inline-block">&larr; Back to Payroll List</a>
    <h2 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h2>
    <p class="text-gray-500 mt-1">A detailed breakdown of the generated payroll.</p>
</div>

<!-- Summary Card -->
<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
            <p class="text-sm font-medium text-gray-500">Status</p>
            <p class="text-lg font-bold text-gray-900">@Model.Payroll.Status</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Total Employees</p>
            <p class="text-lg font-bold text-gray-900">@Model.PaySlips.Count</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Total Net Pay</p>
            <p class="text-lg font-bold text-gray-900">@Model.TotalNetPay.ToString("C", culture)</p>
        </div>
        <div>
            <p class="text-sm font-medium text-gray-500">Date Generated</p>
            <p class="text-lg font-bold text-gray-900">@Model.Payroll.DateGenerated.ToString("MMM dd, yyyy")</p>
        </div>
    </div>
</div>


<!-- Payslip Details Table -->
<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Individual Pay Slips</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Gross Pay</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Deductions</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Net Pay</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Details</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var slip in Model.PaySlips)
                {
                    <tr>
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">@slip.Employee.Email</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-500">@slip.GrossPay.ToString("C", culture)</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-500">@slip.TotalDeductions.ToString("C", culture)</td>
                        <td class="px-6 py-4 text-sm text-right font-semibold text-gray-800">@slip.NetPay.ToString("C", culture)</td>
                        <td class="px-6 py-4 text-sm text-right">
                            <button type="button"
                                    class="text-blue-600 hover:text-blue-900 font-medium"
                                    data-target="slip-details-@slip.Id">
                                View breakdown
                            </button>
                        </td>
                    </tr>
                    <tr id="slip-details-@slip.Id" class="hidden bg-gray-50">
                        <td colspan="5" class="px-6 py-4 text-sm text-gray-700">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Base</p>
                                    <p class="font-semibold text-gray-900">Basic Salary: @slip.BasicSalary.ToString("C", culture)</p>
                                    <p class="text-xs text-gray-600 mt-1">Working Days: @slip.WorkingDaysInMonth | Daily: @slip.DailyRate.ToString("C", culture) | Hourly: @slip.HourlyRate.ToString("C", culture)</p>
                                </div>
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Attendance</p>
                                    <p class="font-semibold text-gray-900">Days Absent: @slip.DaysAbsent</p>
                                    <p class="text-xs text-gray-600 mt-1">Absent Deductions: @slip.AbsentDeductions.ToString("C", culture)</p>
                                </div>
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Overtime</p>
                                    <p class="font-semibold text-gray-900">Hours: @slip.OvertimeHours</p>
                                    <p class="text-xs text-gray-600 mt-1">OT Pay: @slip.OvertimePay.ToString("C", culture)</p>
                                    <p class="text-xs text-gray-600">Penalty Hours: @slip.OvertimePenaltyHours | Penalty: @slip.OvertimePenalty.ToString("C", culture)</p>
                                </div>
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Contributions</p>
                                    <p class="text-xs text-gray-600">SSS: @slip.SSSDeduction.ToString("C", culture)</p>
                                    <p class="text-xs text-gray-600">PhilHealth: @slip.PhilHealthDeduction.ToString("C", culture)</p>
                                    <p class="text-xs text-gray-600">PagIBIG: @slip.PagIBIGDeduction.ToString("C", culture)</p>
                                </div>
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Taxes</p>
                                    <p class="font-semibold text-gray-900">@slip.TaxDeduction.ToString("C", culture)</p>
                                </div>
                                <div class="p-3 rounded border border-gray-200 bg-white">
                                    <p class="text-xs uppercase text-gray-500">Totals</p>
                                    <p class="text-xs text-gray-600">Gross: @slip.GrossPay.ToString("C", culture)</p>
                                    <p class="text-xs text-gray-600">Deductions: @slip.TotalDeductions.ToString("C", culture)</p>
                                    <p class="font-semibold text-gray-900 mt-1">Net: @slip.NetPay.ToString("C", culture)</p>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('button[data-target]').forEach(btn => {
                btn.addEventListener('click', () => {
                    const targetId = btn.getAttribute('data-target');
                    const row = document.getElementById(targetId);
                    if (row) {
                        row.classList.toggle('hidden');
                    }
                });
            });
        });
    </script>
}
