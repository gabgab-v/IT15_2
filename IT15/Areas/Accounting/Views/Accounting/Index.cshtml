    @model IEnumerable<IT15.ViewModels.Accounting.PayrollApprovalViewModel>
@{
    ViewData["Title"] = "Payroll Approval";
    var currentTotalFunds = (decimal)ViewData["CurrentTotalFunds"];
    var search = ViewData["Search"] as string ?? string.Empty;
}

<div class="border-b border-gray-200 pb-4 mb-6">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Payroll Approval</h2>
            <p class="text-gray-500 mt-1">Review pending payrolls and approve budgets based on historical funds.</p>
        </div>
        <form asp-action="Index" method="get" class="flex flex-col sm:flex-row gap-3">
            <div>
                <label for="search" class="text-xs font-semibold text-gray-600 uppercase tracking-wide">Search</label>
                <input id="search" name="search" value="@search" placeholder="Search by month/year"
                       class="mt-1 w-56 px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>
            <div class="flex items-end gap-2 pb-1">
                <button type="submit" class="bg-blue-600 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Apply</button>
                <a asp-action="Index" class="text-sm font-medium text-gray-700 border border-gray-300 px-3 py-2 rounded-lg hover:bg-gray-50">Reset</a>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null) { /* ... success message ... */ }
@if (TempData["ErrorMessage"] != null) { /* ... error message ... */ }

<div class="bg-white p-6 rounded-lg shadow-sm border border-green-300 mb-8">
    <div class="flex items-center">
        <div class="bg-green-100 p-3 rounded-full">
            <i data-lucide="dollar-sign" class="w-6 h-6 text-green-600"></i>
        </div>
        <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Current Total Company Funds</p>
            <p class="text-2xl font-bold text-gray-900">@currentTotalFunds.ToString("C", new System.Globalization.CultureInfo("en-PH"))</p>
        </div>
    </div>
</div>

<div class="space-y-6">
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
        var totalPayrollCost = item.Payroll.PaySlips.Sum(p => p.NetPay);
        var canAfford = item.AvailableFundsForPeriod >= totalPayrollCost;
        var isValidCost = totalPayrollCost >= 0;

        <div class="bg-white p-6 rounded-lg shadow-sm border @(canAfford && isValidCost ? "border-gray-200" : "border-red-400")">
            <div class="flex justify-between items-start">
                <div>
                    <h3 class="text-lg font-bold text-gray-800">@item.Payroll.PayrollMonth.ToString("MMMM yyyy")</h3>
                    <p class="text-sm text-gray-500">Total Net Pay: @totalPayrollCost.ToString("C")</p>
                    <p class="text-sm font-bold @(canAfford ? "text-green-600" : "text-red-600")">
                        Funds Available for this Period: @item.AvailableFundsForPeriod.ToString("C")
                    </p>
                </div>

                @if (canAfford && isValidCost)
                {
                    <form asp-action="ApproveBudget" asp-route-id="@item.Payroll.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-green-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-green-700">
                            Approve Budget
                        </button>
                    </form>
                }
                else
                {
                    <div class="text-right">
                        <button class="bg-gray-400 text-white font-medium py-2 px-4 rounded-lg cursor-not-allowed" disabled>
                            Approve Budget
                        </button>
                        <p class="text-xs text-red-600 mt-1">@(isValidCost ? "Insufficient Funds" : "Invalid Payroll Total")</p>
                    </div>
                }
            </div>
        </div>
        }
    }
    else
    {
        <div class="bg-white p-6 rounded-lg border border-gray-200 text-center text-gray-600">
            No payrolls match the current search.
        </div>
    }
</div>


