@model IT15.ViewModels.Accounting.PayableFormViewModel

@{
    ViewData["Title"] = "New Payable";
}

<div class="max-w-3xl mx-auto bg-white border border-slate-200 shadow-sm rounded-lg">
    <div class="px-6 py-5 border-b border-slate-100 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Record Payable</h1>
            <p class="text-gray-500 text-sm mt-1">Register a supplier bill for monitoring and disbursement.</p>
        </div>
        <a asp-action="Index" class="text-sm text-blue-600 hover:underline">Back to list</a>
    </div>

    <form asp-action="Create" method="post" class="px-6 py-5 space-y-5">
        @Html.AntiForgeryToken()
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label asp-for="SupplierName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="SupplierName" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="SupplierName" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="ReferenceNumber" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ReferenceNumber" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ReferenceNumber" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label asp-for="BillDate" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="BillDate" type="date" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="BillDate" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="DueDate" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="DueDate" type="date" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="DueDate" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label asp-for="BillAmount" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="BillAmount" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="BillAmount" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="ExpenseCategory" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="ExpenseCategory" asp-items="Model.CategoryOptions" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></select>
            </div>
        </div>

        <div>
            <label asp-for="Notes" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Notes" rows="3" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>

        <div class="flex items-center justify-end space-x-3 pt-4 border-t border-slate-100">
            <a asp-action="Index" class="px-4 py-2 text-sm text-gray-600 hover:text-gray-800">Cancel</a>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium">
                Save Payable
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
