@model IT15.ViewModels.Accounting.PayablePaymentViewModel

@{
    ViewData["Title"] = "Record Payment";
    var culture = new System.Globalization.CultureInfo("en-PH");
    string Currency(decimal value) => value.ToString("C", culture);
}

<div class="max-w-2xl mx-auto bg-white border border-slate-200 shadow-sm rounded-lg">
    <div class="px-6 py-5 border-b border-slate-100 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Record Payment</h1>
            <p class="text-gray-500 text-sm mt-1">@Model.SupplierName &bull; @Model.ReferenceNumber</p>
        </div>
        <a asp-action="Index" class="text-sm text-blue-600 hover:underline">Back to list</a>
    </div>

    <div class="px-6 py-5 border-b border-slate-100 bg-slate-50">
        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
            <div>
                <dt class="text-gray-500 uppercase tracking-wide">Outstanding</dt>
                <dd class="text-lg font-semibold text-red-600">@Currency(Model.OutstandingAmount)</dd>
            </div>
            <div>
                <dt class="text-gray-500 uppercase tracking-wide">Payment Date</dt>
                <dd class="text-gray-700">@Model.PaymentDate.ToString("MMM dd, yyyy")</dd>
            </div>
            <div>
                <dt class="text-gray-500 uppercase tracking-wide">Bill</dt>
                <dd class="text-gray-700">@Model.ReferenceNumber</dd>
            </div>
        </dl>
    </div>

    <form asp-action="RecordPayment" method="post" class="px-6 py-5 space-y-5">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PayableId" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div>
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Amount" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Amount" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="PaymentDate" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="PaymentDate" type="date" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="PaymentDate" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Description" rows="3" class="mt-1 block w-full border border-slate-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span class="text-xs text-gray-500">This note appears on the company ledger entry.</span>
        </div>

        <div class="flex items-center justify-end space-x-3 pt-4 border-t border-slate-100">
            <a asp-action="Index" class="px-4 py-2 text-sm text-gray-600 hover:text-gray-800">Cancel</a>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium">
                Record Payment
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
