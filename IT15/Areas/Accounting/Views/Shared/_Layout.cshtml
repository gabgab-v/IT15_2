@using System
@using System.Linq
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Accounting Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100">
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        var rawName = User.Identity?.Name ?? string.Empty;
        var displayName = string.IsNullOrWhiteSpace(rawName)
            ? "User"
            : (rawName.Contains("@") ? rawName.Split('@')[0] : rawName);
        var initials = string.Join(string.Empty, displayName
            .Split(' ', StringSplitOptions.RemoveEmptyEntries)
            .Select(s => char.ToUpperInvariant(s[0])));
        if (string.IsNullOrWhiteSpace(initials))
        {
            initials = displayName.Length >= 2 ? displayName.Substring(0, 2).ToUpperInvariant() : "U";
        }
    }

    <div class="relative min-h-screen bg-gray-100">
        <!-- Sidebar Navigation -->
        <aside class="fixed inset-y-0 left-0 w-64 flex-shrink-0 bg-white border-r border-gray-200 flex flex-col z-30">
            <div class="h-16 flex items-center justify-center border-b p-4">
                <span class="text-xl font-bold text-gray-800">Accounting Panel</span>
            </div>
            <nav class="flex-1 px-4 py-4 space-y-2">
                <a asp-area="Accounting" asp-controller="Dashboard" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Dashboard", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
                    Dashboard
                </a>
                <a asp-area="Accounting" asp-controller="Accounting" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Accounting", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="clipboard-check" class="w-5 h-5 mr-3"></i>
                    Payroll Approval
                </a>
                <a asp-area="Accounting" asp-controller="Payroll" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Payroll", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="landmark" class="w-5 h-5 mr-3"></i>
                    Payroll Management
                </a>
                <a asp-area="Accounting" asp-controller="Operations" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Operations", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="building" class="w-5 h-5 mr-3"></i>
                    Operational Costs
                </a>
                <a asp-area="Accounting" asp-controller="Receivables" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Receivables", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="hand-coins" class="w-5 h-5 mr-3"></i>
                    Accounts Receivable
                </a>
                <a asp-area="Accounting" asp-controller="Payables" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Payables", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="credit-card" class="w-5 h-5 mr-3"></i>
                    Accounts Payable
                </a>

                <!-- NEW LINK for Financial Reports -->
                <a asp-area="Accounting" asp-controller="Report" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(string.Equals(currentController, "Report", StringComparison.OrdinalIgnoreCase) ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="bar-chart-2" class="w-5 h-5 mr-3"></i>
                    Financial Reports
                </a>
            </nav>
            <div class="p-4 border-t border-gray-200">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentPage?.Contains("Manage") ?? false ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="user-circle" class="w-5 h-5 mr-3"></i>
                    My Profile
                </a>
                <form asp-area="Accounting" asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="w-full flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="log-out" class="w-5 h-5 mr-3"></i>
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex flex-col min-h-screen ml-64">
            <header class="h-16 bg-white border-b flex items-center justify-between px-6">
                <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
                <div class="flex items-center gap-3">
                    <span class="mr-1 text-sm font-medium text-gray-700">@displayName</span>
                    <div class="w-9 h-9 bg-gray-700 rounded-full flex items-center justify-center text-white font-bold text-sm">
                        @initials
                    </div>
                </div>
            </header>
            <main class="flex-1 overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>
    <script>lucide.createIcons();</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
