@model IT15.ViewModels.Admin.DashboardViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Dashboard";
    var peso = new CultureInfo("en-PH");
}

<div class="border-b border-gray-200 pb-4 mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Dashboard Overview</h2>
    <p class="text-gray-500 mt-1">Live snapshot of people, approvals, and finances.</p>
    <p class="text-gray-500 text-sm mt-1 flex items-center space-x-2">
        <i data-lucide="clock" class="w-4 h-4"></i>
        <span id="admin-current-time">--:-- --</span>
    </p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-full">
                <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Total Employees</p>
                <p class="text-2xl font-bold text-gray-900">@Model.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
            <div class="bg-green-100 p-3 rounded-full">
                <i data-lucide="log-in" class="w-6 h-6 text-green-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Attended Today</p>
                <p class="text-2xl font-bold text-gray-900">@Model.AttendanceTodayCount</p>
            </div>
        </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
            <div class="bg-yellow-100 p-3 rounded-full">
                <i data-lucide="calendar-off" class="w-6 h-6 text-yellow-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">On Leave Today</p>
                <p class="text-2xl font-bold text-gray-900">@Model.UsersOnLeaveToday</p>
            </div>
        </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center">
            <div class="bg-indigo-100 p-3 rounded-full">
                <i data-lucide="bell-dot" class="w-6 h-6 text-indigo-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Pending Approvals</p>
                <p class="text-2xl font-bold text-gray-900">@(@Model.PendingSupplyRequests + @Model.PendingLeaveRequests + @Model.PendingOvertimeRequests)</p>
                <p class="text-xs text-gray-500">Supply: @Model.PendingSupplyRequests · Leave: @Model.PendingLeaveRequests · OT: @Model.PendingOvertimeRequests</p>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-6">
    <div class="lg:col-span-2 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Financial Snapshot (This Month)</h3>
                    <p class="text-sm text-gray-500">Income vs expenses from the ledger.</p>
                </div>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="p-4 border rounded-lg flex items-center">
                    <div class="bg-blue-100 p-3 rounded-full">
                    <i data-lucide="trending-up" class="w-6 h-6 text-blue-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Sales Income</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.SalesThisMonth.ToString("C", peso)</p>
                </div>
            </div>
            <div class="p-4 border rounded-lg flex items-center">
                <div class="bg-red-100 p-3 rounded-full">
                    <i data-lucide="trending-down" class="w-6 h-6 text-red-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500">Expenses</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.ExpensesThisMonth.ToString("C", peso)</p>
                </div>
            </div>
        </div>
        <div class="mt-6">
            <div class="flex items-center justify-between mb-2">
                <p class="text-sm font-medium text-gray-700">6-month trend</p>
                <p class="text-xs text-gray-500">Income vs expenses</p>
            </div>
            <div class="h-64">
                <canvas id="financeChart"></canvas>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Recent Activity</h3>
                <p class="text-sm text-gray-500">Latest audit log entries.</p>
            </div>
        </div>
        <div class="space-y-3">
            @if (Model.RecentAuditLogs.Any())
            {
                foreach (var log in Model.RecentAuditLogs)
                {
                    <div class="flex items-start space-x-3">
                        <div class="mt-1 w-2 h-2 rounded-full bg-blue-500"></div>
                        <div>
                            <p class="text-sm font-semibold text-gray-800">@log.ActionType</p>
                            <p class="text-sm text-gray-600">@log.Details</p>
                            <p class="text-xs text-gray-400">@log.Timestamp · @log.UserName</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-sm text-gray-500">No recent activity.</p>
            }
        </div>
    </div>
</div>

<div class="grid grid-cols-1 xl:grid-cols-3 gap-6 mt-6">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Attendance (Last 7 days)</h3>
                <p class="text-sm text-gray-500">Daily check-ins trend.</p>
            </div>
        </div>
        <div class="h-64">
            <canvas id="attendanceChart"></canvas>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Leave Pipeline</h3>
                <p class="text-sm text-gray-500">Approved vs pending vs denied.</p>
            </div>
        </div>
        <div class="h-64">
            <canvas id="leaveStatusChart"></canvas>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h3 class="text-lg font-semibold text-gray-800">Approval Backlog</h3>
                <p class="text-sm text-gray-500">Where requests are piling up.</p>
            </div>
        </div>
        <div class="h-64">
            <canvas id="approvalBacklogChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const el = document.getElementById('admin-current-time');
            const update = () => {
                if (!el) return;
                const now = new Date();
                el.textContent = now.toLocaleTimeString([], { hour: 'numeric', minute: '2-digit' });
            };
            update();
            setInterval(update, 1000);

            const financeLabels = @Html.Raw(Json.Serialize(Model.FinanceChartLabels));
            const financeIncome = @Html.Raw(Json.Serialize(Model.FinanceIncomeSeries));
            const financeExpenses = @Html.Raw(Json.Serialize(Model.FinanceExpenseSeries));
            const attendanceLabels = @Html.Raw(Json.Serialize(Model.AttendanceChartLabels));
            const attendanceData = @Html.Raw(Json.Serialize(Model.AttendanceChartData));
            const leaveLabels = @Html.Raw(Json.Serialize(Model.LeaveStatusLabels));
            const leaveData = @Html.Raw(Json.Serialize(Model.LeaveStatusData));
            const approvalLabels = @Html.Raw(Json.Serialize(Model.ApprovalBacklogLabels));
            const approvalData = @Html.Raw(Json.Serialize(Model.ApprovalBacklogData));

            const financeCtx = document.getElementById('financeChart');
            if (financeCtx) {
                new Chart(financeCtx, {
                    type: 'line',
                    data: {
                        labels: financeLabels,
                        datasets: [
                            {
                                label: 'Income',
                                data: financeIncome,
                                borderColor: '#2563eb',
                                backgroundColor: 'rgba(37, 99, 235, 0.12)',
                                borderWidth: 2,
                                tension: 0.35,
                                fill: true,
                                pointRadius: 3
                            },
                            {
                                label: 'Expenses',
                                data: financeExpenses,
                                borderColor: '#ef4444',
                                backgroundColor: 'rgba(239, 68, 68, 0.08)',
                                borderWidth: 2,
                                tension: 0.35,
                                fill: true,
                                pointRadius: 3
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: value => `₱${Number(value).toLocaleString()}`
                                }
                            }
                        }
                    }
                });
            }

            const attendanceCtx = document.getElementById('attendanceChart');
            if (attendanceCtx) {
                new Chart(attendanceCtx, {
                    type: 'bar',
                    data: {
                        labels: attendanceLabels,
                        datasets: [{
                            label: 'Check-ins',
                            data: attendanceData,
                            backgroundColor: 'rgba(79, 70, 229, 0.2)',
                            borderColor: '#4f46e5',
                            borderWidth: 1.5,
                            borderRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            x: { grid: { display: false } },
                            y: {
                                beginAtZero: true,
                                ticks: { stepSize: 1 }
                            }
                        }
                    }
                });
            }

            const leaveCtx = document.getElementById('leaveStatusChart');
            if (leaveCtx) {
                new Chart(leaveCtx, {
                    type: 'doughnut',
                    data: {
                        labels: leaveLabels,
                        datasets: [{
                            data: leaveData,
                            backgroundColor: ['#f59e0b', '#22c55e', '#ef4444'],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        },
                        cutout: '62%'
                    }
                });
            }

            const approvalCtx = document.getElementById('approvalBacklogChart');
            if (approvalCtx) {
                new Chart(approvalCtx, {
                    type: 'bar',
                    data: {
                        labels: approvalLabels,
                        datasets: [{
                            label: 'Pending',
                            data: approvalData,
                            backgroundColor: '#0ea5e9',
                            borderRadius: 6,
                            maxBarThickness: 28
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            x: {
                                beginAtZero: true,
                                ticks: { stepSize: 1 }
                            },
                            y: { grid: { display: false } }
                        }
                    }
                });
            }
        });
    </script>
}

