<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenBook HRIS</title>

    <!-- Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Lucide Icons for modern, clean icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: #94a3b8;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #475569;
            }
    </style>
</head>
<body class="bg-gray-100">
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    }

    <div class="relative min-h-screen bg-gray-100">
        <!-- Sidebar Navigation -->
        <aside class="fixed inset-y-0 left-0 w-64 flex-shrink-0 bg-white border-r border-gray-200 flex flex-col z-30">
            <!-- Logo and Branding -->
            <div class="h-16 flex items-center justify-center border-b border-gray-200 p-4">
                <div class="flex items-center space-x-3">
                    <img src="https://placehold.co/40x40/3b82f6/ffffff?text=OB" alt="OpenBook Logo" class="rounded-full">
                    <span class="text-xl font-bold text-gray-800">OpenBook</span>
                </div>
            </div>

            <!-- Navigation Links -->
            <nav class="flex-1 px-4 py-4 space-y-2">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentController == "Dashboard" ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
                    Dashboard
                </a>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentController == "User" ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="users" class="w-5 h-5 mr-3"></i>
                    Manage Employees
                </a>
                <a asp-area="Admin" asp-controller="SupplyRequest" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentController == "SupplyRequest" ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="package" class="w-5 h-5 mr-3"></i>
                    Supply Requests
                </a>

                <!-- THE CHANGE: Added the new link to the Audit Log page -->
                <a asp-area="Admin" asp-controller="AuditLog" asp-action="Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentController == "AuditLog" ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="history" class="w-5 h-5 mr-3"></i>
                    Audit Log
                </a>
            </nav>

            <!-- Profile and Logout section at the bottom -->
            <div class="p-4 border-t border-gray-200 space-y-2">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-lg @(currentPage?.Contains("Manage") ?? false ? "bg-blue-50 text-blue-600" : "text-gray-600 hover:bg-gray-100")">
                    <i data-lucide="user-circle" class="w-5 h-5 mr-3"></i>
                    My Profile
                </a>
                <!-- LOGOUT BUTTON FORM -->
                <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="w-full flex items-center px-4 py-2.5 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i data-lucide="log-out" class="w-5 h-5 mr-3"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="flex flex-col min-h-screen ml-64">
            <!-- Header -->
            <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6">
                <div>
                    <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
                </div>
                <div class="flex items-center">
                    <span class="mr-3 text-sm font-medium text-gray-700">@(User.Identity.Name)</span>
                    <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center text-white font-bold text-sm">
                        AD
                    </div>
                </div>
            </header>

            <!-- This is where the specific page content will be rendered -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Initialize Lucide Icons -->
    <script>
        lucide.createIcons();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

