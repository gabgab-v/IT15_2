@model IT15.ViewModels.SupplyCatalogViewModel

@{
    ViewData["Title"] = "Supply Catalog";
    Layout = "~/Views/UserDashboard/_Layout.cshtml";
    var search = ViewData["Search"] as string ?? string.Empty;
    var products = Model.Products?.ToList() ?? new List<IT15.Models.StoreProduct>();
}

<div class="flex flex-col md:flex-row justify-between items-start md:items-center border-b border-gray-200 pb-4 mb-6">
    <div>
        <h2 class="text-2xl font-bold text-gray-900">Supply Catalog & Request</h2>
        <p class="text-gray-500 mt-1">Submit supply requests for admin approval before inventory is updated.</p>
    </div>
    <a asp-action="MyRequests"
       class="bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700 mt-2 md:mt-0">
        View Requests &rarr;
    </a>

</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
        <p>@TempData["SuccessMessage"]</p>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>@TempData["ErrorMessage"]</p>
    </div>
}

<div class="bg-white p-5 rounded-xl shadow-sm border border-gray-200 mb-6">
    <form asp-action="SupplyCatalog" method="get" class="flex flex-col sm:flex-row gap-4 sm:items-end">
        <div class="flex-1">
            <label for="search" class="text-xs font-semibold text-gray-600 uppercase tracking-wide">Search products</label>
            <input type="text"
                   id="search"
                   name="search"
                   value="@search"
                   placeholder="Search by product name"
                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div class="flex items-center gap-3">
            <button type="submit" class="bg-blue-600 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Apply
            </button>
            <a asp-action="SupplyCatalog" class="text-sm font-medium text-gray-700 border border-gray-300 px-4 py-2 rounded-lg hover:bg-gray-50">
                Reset
            </a>
            <span class="text-sm text-gray-500">Showing @products.Count item(s)</span>
        </div>
    </form>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    @if (products.Any())
    {
        foreach (var product in products)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                <div class="h-48 bg-gray-100 flex items-center justify-center p-4">
                    <img src="@product.Image" alt="@product.Title" class="max-h-full max-w-full object-contain" />
                </div>
                <div class="p-4 flex flex-col flex-grow">
                    <h4 class="font-semibold text-gray-800 text-sm flex-grow">@product.Title</h4>
                    <p class="text-xl font-bold text-gray-900 my-2">@product.Price.ToString("C", new System.Globalization.CultureInfo("en-PH"))</p>
                    <form asp-controller="UserDashboard" asp-action="RequestSupply" method="post" class="mt-auto space-y-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productName" value="@product.Title" />

                        <div>
                            <label class="block text-sm font-medium text-gray-700">Quantity</label>
                            <input type="number" name="quantity" value="10" min="1" class="mt-1 w-full text-center border-gray-300 rounded-md shadow-sm" />
                        </div>

                        <!-- THE CHANGE: The dropdown for delivery services is now added -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Delivery Service</label>
                            <select name="deliveryServiceId" asp-items="Model.DeliveryServices" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></select>
                        </div>

                        <button type="submit" class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700 text-sm">Request</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="sm:col-span-2 lg:col-span-3 xl:col-span-4 bg-white border border-gray-200 rounded-lg p-6 text-center text-gray-600">
            No products match the current search.
        </div>
    }
</div>

