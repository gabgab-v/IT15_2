@model IT15.ViewModels.ApplicationEmailConfirmationResult

@{
    ViewData["Title"] = Model?.Title ?? "Confirm Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isSuccess = Model?.Success == true;
}

<div class="max-w-2xl mx-auto text-center py-16">
    <div class="bg-white p-10 rounded-lg shadow-md border border-gray-200">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full @(isSuccess ? "bg-green-100" : "bg-red-100") mb-6">
            <i data-lucide="@(isSuccess ? "check-circle" : "alert-triangle")" class="h-8 w-8 @(isSuccess ? "text-green-600" : "text-red-600")"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-800">@Model?.Title</h1>
        <p class="text-gray-600 mt-3">@Model?.Message</p>

        @if (isSuccess && !string.IsNullOrEmpty(Model?.RegisterUrl))
        {
            <div class="mt-8">
                <a href="@Model.RegisterUrl" class="bg-blue-600 text-white font-medium py-3 px-6 rounded-lg hover:bg-blue-700">
                    Continue to Registration
                </a>
            </div>
        }
        else
        {
            <div class="mt-8">
                <a asp-controller="Home" asp-action="Index" class="text-blue-600 hover:text-blue-800 font-medium">
                    Return Home
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            lucide.createIcons();
        });
    </script>
}
